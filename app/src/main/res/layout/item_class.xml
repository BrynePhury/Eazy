<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_blank_profile_picture" />

        <TextView
            android:id="@+id/className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/teacher_profile"
            android:layout_toRightOf="@id/teacher_profile"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Class Name"
            android:textAllCaps="false"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/className"
            android:layout_toRightOf="@id/teacher_profile"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Class Name"
            android:textAllCaps="false"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/classCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Class Count"
            android:textAllCaps="false"
            android:textColor="@color/gold"
            android:textSize="@dimen/_11ssp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>